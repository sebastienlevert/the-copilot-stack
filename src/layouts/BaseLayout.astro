---
import '../styles/global.css';

interface Props {
  title: string;
  description: string;
  image?: string;
  article?: boolean;
}

const { title, description, image, article = false } = Astro.props;
const canonicalURL = new URL(Astro.url.pathname, Astro.site);
const base = import.meta.env.BASE_URL;
const socialImage = image || `${base}/og-default.png`;
const clarityId = import.meta.env.PUBLIC_CLARITY_ID;
---

<!doctype html>
<html lang="en" class="scrollbar-terminal">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />

    <!-- Primary Meta Tags -->
    <title>{title} | The Copilot Stack</title>
    <meta name="title" content={`${title} | The Copilot Stack`} />
    <meta name="description" content={description} />
    <link rel="canonical" href={canonicalURL} />

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content={article ? 'article' : 'website'} />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:title" content={`${title} | The Copilot Stack`} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={new URL(socialImage, Astro.site)} />

    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content={canonicalURL} />
    <meta property="twitter:title" content={`${title} | The Copilot Stack`} />
    <meta property="twitter:description" content={description} />
    <meta property="twitter:image" content={new URL(socialImage, Astro.site)} />

    <!-- RSS Feed -->
    <link rel="alternate" type="application/rss+xml" title="The Copilot Stack Blog" href="/rss.xml" />

    <!-- Microsoft Clarity -->
    {clarityId && import.meta.env.PROD && (
      <script type="text/javascript" is:inline define:vars={{ clarityId }}>
        (function(c,l,a,r,i,t,y){
          c[a]=c[a]||function(){(c[a].q=c[a].q||[]).push(arguments)};
          t=l.createElement(r);t.async=1;t.src="https://www.clarity.ms/tag/"+i;
          y=l.getElementsByTagName(r)[0];y.parentNode.insertBefore(t,y);
        })(window, document, "clarity", "script", clarityId);
      </script>
    )}
  </head>
  <body class="min-h-screen flex flex-col">
    <slot />
  </body>
</html>
