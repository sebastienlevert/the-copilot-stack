---
import BaseLayout from './BaseLayout.astro';
import Header from '../components/layout/Header.astro';
import Footer from '../components/layout/Footer.astro';
import ReadingTime from '../components/content/ReadingTime.astro';
import TagList from '../components/content/TagList.astro';
import CopyCodeButton from '../components/ui/CopyCodeButton.astro';
import HeadingAnchor from '../components/ui/HeadingAnchor.astro';
import { formatDate } from '../utils/formatDate';
import { getReadingTime } from '../utils/readingTime';

interface Props {
  title: string;
  description: string;
  pubDate: Date;
  author: string;
  tags: string[];
  coverImage?: string;
  content: string;
}

const { title, description, pubDate, author, tags, coverImage, content } = Astro.props;
const readingTime = getReadingTime(content);
const base = import.meta.env.BASE_URL;
---

<BaseLayout title={title} description={description} image={coverImage} article={true}>
  <Header />
  <main class="flex-grow container mx-auto px-4 py-8 max-w-4xl">
    <article class="prose prose-invert max-w-none">
      <header class="mb-8 border-b border-terminal-greenDim pb-6">
        <h1 class="text-5xl font-bold text-terminal-green mb-4 terminal-prompt">
          {title}
        </h1>
        <div class="flex flex-wrap items-center gap-4 text-terminal-greenDim text-sm">
          <time datetime={pubDate.toISOString()}>
            {formatDate(pubDate)}
          </time>
          <span>•</span>
          <span>by <a href={`${base}/authors/${encodeURIComponent(author)}`} class="text-terminal-green hover:text-terminal-greenDim transition-colors duration-200 underline">{author}</a></span>
          <span>•</span>
          <ReadingTime readingTime={readingTime} />
        </div>
        {tags.length > 0 && (
          <div class="mt-4">
            <TagList tags={tags} linkable={true} />
          </div>
        )}
      </header>
      <div class="prose-content">
        <slot />
      </div>
    </article>
  </main>
  <Footer />
  <CopyCodeButton />
  <HeadingAnchor />
</BaseLayout>

<style>
  .prose-content :global(h2),
  .prose-content :global(h3),
  .prose-content :global(h4) {
    margin-top: 2rem;
    margin-bottom: 1rem;
  }

  .prose-content :global(p) {
    margin-bottom: 1rem;
    line-height: 1.7;
  }

  .prose-content :global(a) {
    text-decoration: underline;
  }

  .prose-content :global(img) {
    border-radius: 0.5rem;
    border: 1px solid var(--terminal-greenDim);
  }
</style>
