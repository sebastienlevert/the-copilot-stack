---
interface Props {
  tags: string[];
  linkable?: boolean;
}

const { tags, linkable = false } = Astro.props;
const base = import.meta.env.BASE_URL;
---

<div class="tag-list flex flex-wrap gap-2">
  {tags.map((tag) => (
    linkable ? (
      <a
        href={`${base}/tags/${encodeURIComponent(tag)}`}
        class="tag no-underline hover:bg-terminal-green hover:text-terminal-black transition-colors duration-200"
      >
        #{tag}
      </a>
    ) : (
      <span class="tag">
        #{tag}
      </span>
    )
  ))}
</div>
