---
interface Props {
  videoId: string;
  title: string;
}

const { videoId, title } = Astro.props;
---

<div class="youtube-embed">
  <iframe
    src={`https://www.youtube.com/embed/${videoId}`}
    title={title}
    frameborder="0"
    allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share"
    allowfullscreen
    class="w-full aspect-video rounded-lg border border-terminal-greenDim"
  ></iframe>
</div>

<style>
  .youtube-embed {
    position: relative;
    width: 100%;
    max-width: 100%;
  }

  iframe {
    display: block;
  }
</style>
