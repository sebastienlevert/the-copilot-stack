---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/layout/Header.astro';
import Footer from '../components/layout/Footer.astro';
import { getCollection } from 'astro:content';
import BlogCard from '../components/blog/BlogCard.astro';
import EpisodeCard from '../components/episodes/EpisodeCard.astro';

const base = import.meta.env.BASE_URL;

// Get latest blog posts (limit 3)
const allBlogPosts = await getCollection('blog', ({ data }) => !data.draft);
const latestPosts = allBlogPosts
  .sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf())
  .slice(0, 3);

// Get latest episodes (limit 3)
const allEpisodes = await getCollection('episodes', ({ data }) => !data.draft);
const latestEpisodes = allEpisodes
  .sort((a, b) => b.data.episodeNumber - a.data.episodeNumber)
  .slice(0, 3);
---

<BaseLayout
  title="Home"
  description="The Copilot Stack - Your comprehensive resource for Microsoft Copilot extensibility, featuring technical posts, videos, and podcast episodes."
>
  <Header />
  <main class="flex-grow">
    <!-- Hero Section -->
    <section class="border-b border-terminal-greenDim bg-terminal-black">
      <div class="container mx-auto px-4 py-16 md:py-24">
        <div class="max-w-4xl">
          <h1 class="text-5xl md:text-7xl font-bold text-terminal-green mb-6 terminal-prompt">
            The Copilot Stack
          </h1>
          <p class="text-xl md:text-2xl text-terminal-white mb-8 leading-relaxed">
            Your comprehensive resource for Microsoft Copilot extensibility.
            <br />
            <span class="text-terminal-greenDim">
              Technical posts ‚Ä¢ Videos ‚Ä¢ Podcast episodes
            </span>
          </p>
          <div class="flex flex-wrap gap-4">
            <a href={`${base}/blog`} class="btn">
              Read the Blog
            </a>
            <a href={`${base}/episodes`} class="btn bg-terminal-gray border border-terminal-greenDim text-terminal-green hover:bg-terminal-greenDim hover:text-terminal-black">
              Watch Episodes
            </a>
          </div>
        </div>
      </div>
    </section>

    <!-- Latest Content Section -->
    <section class="container mx-auto px-4 py-16">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12">
        <!-- Latest Blog Posts -->
        <div>
          <div class="mb-8 flex items-center justify-between">
            <h2 class="text-3xl md:text-4xl font-bold text-terminal-green terminal-prompt">
              Latest Post
            </h2>
            <a
              href={`${base}/blog`}
              class="text-terminal-greenDim hover:text-terminal-green transition-colors"
            >
              View all ‚Üí
            </a>
          </div>
          <div>
            {latestPosts.length > 0 ? (
              <BlogCard
                slug={latestPosts[0].slug}
                title={latestPosts[0].data.title}
                description={latestPosts[0].data.description}
                pubDate={latestPosts[0].data.pubDate}
                tags={latestPosts[0].data.tags}
                content={latestPosts[0].body}
                ogImage={`${base}/og/blog/${latestPosts[0].slug}.png`}
              />
            ) : (
              <article class="card">
                <div class="flex flex-col h-full justify-center items-center py-12">
                  <span class="text-6xl text-terminal-greenDim mb-4">üìù</span>
                  <h3 class="text-xl font-bold text-terminal-green mb-2">Coming Soon</h3>
                  <p class="text-terminal-greenDim text-center">
                    New blog posts are on the way. Check back soon for technical insights and tutorials.
                  </p>
                </div>
              </article>
            )}
          </div>
        </div>

        <!-- Latest Episodes -->
        <div>
          <div class="mb-8 flex items-center justify-between">
            <h2 class="text-3xl md:text-4xl font-bold text-terminal-green terminal-prompt">
              Latest Episode
            </h2>
            <a
              href={`${base}/episodes`}
              class="text-terminal-greenDim hover:text-terminal-green transition-colors"
            >
              View all ‚Üí
            </a>
          </div>
          <div>
            {latestEpisodes.length > 0 ? (
              <EpisodeCard
                slug={latestEpisodes[0].slug}
                title={latestEpisodes[0].data.title}
                description={latestEpisodes[0].data.description}
                pubDate={latestEpisodes[0].data.pubDate}
                episodeNumber={latestEpisodes[0].data.episodeNumber}
                tags={latestEpisodes[0].data.tags}
                youtubeId={latestEpisodes[0].data.youtubeId}
              />
            ) : (
              <article class="card">
                <div class="flex flex-col h-full justify-center items-center py-12">
                  <span class="text-6xl text-terminal-greenDim mb-4">üé•</span>
                  <h3 class="text-xl font-bold text-terminal-green mb-2">Coming Soon</h3>
                  <p class="text-terminal-greenDim text-center">
                    Video episodes are coming soon. Subscribe to stay updated when they launch.
                  </p>
                </div>
              </article>
            )}
          </div>
        </div>
      </div>
    </section>

    <!-- CTA Section -->
    <section class="border-t border-terminal-greenDim">
      <div class="container mx-auto px-4 py-16">
        <div class="card text-center max-w-2xl mx-auto">
        <h2 class="text-3xl font-bold text-terminal-green mb-4 terminal-prompt">
          Stay Updated
        </h2>
        <p class="text-terminal-white mb-6">
          Subscribe to our RSS feed to get the latest posts and episodes delivered to your favorite reader.
        </p>
        <div class="flex flex-wrap gap-4 justify-center">
          <a href={`${base}/rss.xml`} class="btn">
            Subscribe via RSS
          </a>
          <a href="https://github.com/sebastienlevert/the-copilot-stack" target="_blank" rel="noopener noreferrer" class="btn bg-terminal-gray border border-terminal-greenDim text-terminal-green hover:bg-terminal-greenDim hover:text-terminal-black">
            Star on GitHub
          </a>
        </div>
      </div>
      </div>
    </section>
  </main>
  <Footer />
</BaseLayout>
